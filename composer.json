{
    "name": "h22k/mng-kargo",
    "description": "SDK for MNG KARGO services",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Halil Hakan Karabay",
            "email": "hakankarabay@icloud.com"
        }
    ],
    "scripts": {
        "phpstan": "phpstan analyse",
        "phpcs": "phpcs",
        "fix": "phpcbf",
        "test": "pest",
        "test:coverage": "pest --coverage",
        "test:coverage-html": "pest --coverage --coverage-html=coverage-report"
    },
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "symfony/var-dumper": "^6.0",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-drift": "^2.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.9",
        "monolog/monolog": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "H22k\\MngKargo\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "H22k\\MngKargo\\Test\\": "tests"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
